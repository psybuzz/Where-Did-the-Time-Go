<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wdttg.wheredidthetimego" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="wdttg.wheredidthetimego.SliderActivity"
            android:label="@string/title_activity_slider" >
        </activity>
        <activity
            android:name="wdttg.wheredidthetimego.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wdttg.wheredidthetimego.ResultActivity" />
        </activity>

        <uses-permission android:name="android.permission.WAKE_LOCK" />

        <receiver
            android:name="wdttg.wheredidthetimego.history.NotificationGenerator"
            android:process=":remote" />

        <activity
            android:name="wdttg.wheredidthetimego.AChartEnginePieChartActivity"
            android:label="@string/title_activity_achart_engine_pie_chart" >
        </activity>
    </application>

</manifest>
