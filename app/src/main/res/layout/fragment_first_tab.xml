<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainframe"
    tools:context="wdttg.wheredidthetimego.FirstTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/switchGraphButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/graph"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="In the current session, you&apos;ve been 32% productive!"
        android:id="@+id/productivityText"
        android:layout_above="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="145dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:id="@+id/playSwitch"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:id="@+id/clearButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp" />

</FrameLayout>
